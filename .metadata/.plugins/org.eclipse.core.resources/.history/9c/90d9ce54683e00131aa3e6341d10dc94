package ast.statement;

import ast.Environment;
import ast.VariableNotDefinedException;
import ast.arith.ArithExpr;

/**
 * x := a;
 * @author zhenli
 *
 */
public class AssignStatement extends Statement {

	private String x; // variable name
	private ArithExpr a; // expression
	
	public AssignStatement(String name, ArithExpr expression) {
		this.x = name;
		this.a = expression;
	}
	
	@Override
	public void evaluate(Environment env) throws VariableNotDefinedException {
		int value = a.evaluate(env);
		env.setVariable(x, value);
	}

}
