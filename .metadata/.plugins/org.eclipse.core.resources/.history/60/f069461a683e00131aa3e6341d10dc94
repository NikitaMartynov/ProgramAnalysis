package ast.statement;

import ast.Environment;
import ast.VariableNotDefinedException;
import ast.arith.ArithExpr;
/**
 * A[a1] := a2;
 * @author zhenli
 *
 */
public class ArrayAssignStatement extends Statement{

	private String A;
	private ArithExpr a1;
	private ArithExpr a2;
	
	public ArrayAssignStatement(String name, ArithExpr a1, ArithExpr a2) {
		this.A = name;
		this.a1 = a1;
		this.a2 = a2;
	}
	
	@Override
	public void evaluate(Environment env) throws VariableNotDefinedException {
		int value = a2.evaluate(env);
		int index = a1.evaluate(env);
		env.setArray(A, index, value);
	}
}
